<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Application</title>
</head>

<body>
    <h1>Welcome to the Application</h1>
    <h2 class="title">Danh Sách Môn Học</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (subjects.length) { %>
                <% subjects.forEach(function(subject) { %>
                    <tr>
                        <td>
                            <%= subject.id %>
                        </td>
                        <td>
                            <%= subject.name %>
                        </td>
                        <td>
                            <%= subject.type %>
                        </td>
                        <td>
                            <img src="<%= subject.image %>" alt="Image" width="100" height="100">
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/subjects/<%= subject.id%>">Edit</a>
                            <form action="/subjects/delete/<%= subject.id %>" method="POST">
                                <button class="btn btn-danger">Del</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                        <%} else {%>
                            <tr>
                                <td colspan="5"> Not found subjects </td>
                            </tr>
                            <% }%>
        </tbody>
    </table>
    <form action="/subjects" method="post" enctype="multipart/form-data">
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" placeholder="enter name subject" required><br>
        <label for="type">Type:</label><br>
        <input type="text" id="type" name="type" placeholder="enter type subject" required><br>
        <label for="image">Image:</label><br>
        <input type="file" id="image" name="image" placeholder="enter image subject"><br><br>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</body>

</html>